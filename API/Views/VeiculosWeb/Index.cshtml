@model VeiculoListViewModel

@{
    ViewData["Title"] = "Veículos";
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2><i class="bi bi-car-front"></i> Veículos (@Model.TotalCount)</h2>
        <a href="/VeiculosWeb/Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Novo Veículo
        </a>
    </div>
</div>

<!-- Busca simples -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-md-6">
                <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Buscar por placa...">
            </div>
            <div class="col-md-2">
                <select class="form-select" name="pageSize">
                    <option value="10" selected="@(Model.PageSize == 10)">10 por página</option>
                    <option value="20" selected="@(Model.PageSize == 20)">20 por página</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Buscar</button>
            </div>
        </form>
    </div>
</div>

<!-- Tabela -->
@if (Model.Veiculos != null && Model.Veiculos.Any())
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Placa</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Ano</th>
                        <th>Cor</th>
                        <th>Cliente</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var veiculo in Model.Veiculos)
                    {
                        <tr>
                            <td>@veiculo.Id</td>
                            <td><strong>@veiculo.Placa</strong></td>
                            <td>@veiculo.Marca</td>
                            <td>@veiculo.Modelo</td>
                            <td>@veiculo.Ano</td>
                            <td>
                                <span class="badge" style="background-color: @veiculo.Cor; border: 1px solid #ccc;">
                                    @veiculo.Cor
                                </span>
                            </td>
                            <td>@veiculo.NomeCliente</td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", "VeiculosWeb", new { id = veiculo.Id })" 
                                   class="btn btn-sm btn-info" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Paginação simples -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm">Anterior</a>
                </li>
            }

            <li class="page-item active">
                <span class="page-link">Página @Model.PageNumber</span>
            </li>

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm">Próxima</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Nenhum veículo encontrado.
    </div>
}

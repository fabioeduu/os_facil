@{
    ViewData["Title"] = "Home";
}

<h1 class="mb-4">Bem-vindo ao OS Facil</h1>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-person" style="font-size: 2rem; color: var(--primary-blue);"></i>
                <h5 class="card-title mt-3">Clientes</h5>
                <p class="card-text">Gerenciar clientes</p>
                <a href="/ClientesWeb" class="btn btn-primary w-100">Acessar</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-car-front" style="font-size: 2rem; color: var(--primary-blue);"></i>
                <h5 class="card-title mt-3">Veículos</h5>
                <p class="card-text">Gerenciar veículos</p>
                <a href="/VeiculosWeb" class="btn btn-primary w-100">Acessar</a>

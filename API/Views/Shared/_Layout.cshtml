<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OS Facil </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUarbnLuAaKMd+r/S+W5X+i7aLqJWDQh21dpnErMadCrBWdMw8g" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-blue: #0066cc;
            --dark-blue: #003d99;
            --light-blue: #e6f0ff;
            --gray-dark: #333333;
            --gray-medium: #666666;
            --gray-light: #f5f5f5;
            --white: #ffffff;
            --black: #000000;
            --success-green: #28a745;
            --danger-red: #dc3545;
            --warning-orange: #ffc107;
        }

        body {
            background-color: var(--gray-light);
            color: var(--gray-dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar Styles */
        .navbar {
            background-color: var(--white);
            border-bottom: 2px solid var(--primary-blue);
            padding: 12px 0;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .navbar-brand {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--primary-blue) !important;
            margin-left: 20px;
        }

        .navbar-brand i {
            margin-right: 8px;
        }

        .nav-link {
            color: var(--gray-medium) !important;
            font-weight: 500;
            margin: 0 8px;
            padding: 8px 12px !important;
            border-radius: 4px;
            transition: 0.3s ease;
        }

        .nav-link:hover {
            background-color: var(--light-blue);
            color: var(--primary-blue) !important;
        }

        .navbar-toggler {
            border: 1px solid var(--primary-blue);
            margin-right: 20px;
        }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 0.25rem rgba(0, 102, 204, 0.25);
        }

        /* Main Content */
        main {
            flex: 1;
            padding: 40px 20px;
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
        }

        /* Alert Styles */
        .alert {
            border-radius: 6px;
            border: 1px solid;
            margin-bottom: 20px;
            animation: slideDown 0.3s ease;
        }

        .alert-success {
            background-color: #f0f8f0;
            border-color: var(--success-green);
            color: #1e4620;
        }

        .alert-danger {
            background-color: #fff5f5;
            border-color: var(--danger-red);
            color: #721c24;
        }

        .btn-close {
            color: inherit;
        }

        /* Card Styles */
        .card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            background-color: var(--white);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
            transition: 0.3s ease;
            margin-bottom: 20px;
        }

        .card:hover {
            box-shadow: 0 4px 12px rgba(0, 102, 204, 0.15);
            border-color: var(--primary-blue);
        }

        .card-body {
            padding: 24px;
        }

        .card-title {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--gray-dark);
            margin-bottom: 12px;
        }

        .card-text {
            color: var(--gray-medium);
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .card-header {
            background-color: var(--light-blue);
            border-bottom: 1px solid #d0e0ff;
            padding: 16px 24px;
            font-weight: 600;
            color: var(--primary-blue);
        }

        /* Button Styles */
        .btn {
            border-radius: 6px;
            padding: 10px 20px;
            font-weight: 600;
            transition: 0.3s ease;
            border: none;
            font-size: 0.9rem;
            cursor: pointer;
        }

        .btn-primary {
            background-color: var(--primary-blue);
            color: var(--white);
        }

        .btn-primary:hover {
            background-color: var(--dark-blue);
            color: var(--white);
        }

        .btn-success {
            background-color: var(--success-green);
            color: var(--white);
        }

        .btn-success:hover {
            background-color: #218838;
            color: var(--white);
        }

        .btn-danger {
            background-color: var(--danger-red);
            color: var(--white);
        }

        .btn-danger:hover {
            background-color: #c82333;
            color: var(--white);
        }

        .btn-secondary {
            background-color: var(--gray-medium);
            color: var(--white);
        }

        .btn-secondary:hover {
            background-color: var(--gray-dark);
            color: var(--white);
        }

        .btn-outline-primary {
            border: 1px solid var(--primary-blue);
            color: var(--primary-blue);
            background-color: transparent;
        }

        .btn-outline-primary:hover {
            background-color: var(--light-blue);
            color: var(--primary-blue);
        }

        /* Page Title */
        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--gray-dark);
            margin-bottom: 30px;
            border-bottom: 3px solid var(--primary-blue);
            padding-bottom: 12px;
        }

        /* Table Styles */
        .table {
            background-color: var(--white);
            border-collapse: collapse;
        }

        .table thead {
            background-color: var(--light-blue);
            border-bottom: 2px solid var(--primary-blue);
        }

        .table thead th {
            color: var(--primary-blue);
            font-weight: 700;
            padding: 14px;
            text-align: left;
            border: none;
        }

        .table tbody tr {
            border-bottom: 1px solid #e0e0e0;
            transition: 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: var(--light-blue);
        }

        .table tbody td {
            padding: 12px 14px;
            color: var(--gray-dark);
        }

        /* Form Styles */
        .form-control,
        .form-select {
            border: 1px solid #d0d0d0;
            border-radius: 6px;
            padding: 10px 12px;
            font-size: 0.95rem;
            transition: 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 0.2rem rgba(0, 102, 204, 0.15);
        }

        .form-label {
            font-weight: 600;
            color: var(--gray-dark);
            margin-bottom: 8px;
        }

        /* Footer */
        .footer {
            background-color: var(--gray-dark);
            color: var(--white);
            padding: 30px 20px;
            text-align: center;
            border-top: 2px solid var(--primary-blue);
            margin-top: auto;
        }

        .footer p {
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 15px;
            flex-wrap: wrap;
        }

        .footer-link {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: 0.3s ease;
            font-size: 0.9rem;
        }

        .footer-link:hover {
            color: var(--white);
        }

        /* Badge Styles */
        .badge-primary {
            background-color: var(--primary-blue);
            color: var(--white);
            padding: 6px 10px;
            border-radius: 4px;
            font-weight: 600;
            font-size: 0.8rem;
        }

        .badge-success {
            background-color: var(--success-green);
            color: var(--white);
            padding: 6px 10px;
            border-radius: 4px;
            font-weight: 600;
            font-size: 0.8rem;
        }

        .badge-danger {
            background-color: var(--danger-red);
            color: var(--white);
            padding: 6px 10px;
            border-radius: 4px;
            font-weight: 600;
            font-size: 0.8rem;
        }

        /* Animations */
        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-15px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .page-title {
                font-size: 1.5rem;
            }

            main {
                padding: 20px 15px;
            }

            .card-body {
                padding: 16px;
            }

            .navbar-brand {
                margin-left: 10px;
                font-size: 1.2rem;
            }

            .table {
                font-size: 0.85rem;
            }

            .table thead th,
            .table tbody td {
                padding: 8px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-gear-fill"></i>OS Facil 
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <i class="bi bi-list"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/ClientesWeb">
                            <i class="bi bi-person"></i> Clientes
                        </a>
                    </li>
                    <br>
                    <li class="nav-item">
                        <a class="nav-link" href="/VeiculosWeb">
                            <i class="bi bi-car-front"></i> Veículos
                        </a>
                    </li>
                    <br>
                    <li class="nav-item">
                        <a class="nav-link" href="/OrdensServicoWeb">
                            <i class="bi bi-clipboard-check"></i> Ordens
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main>
        <div class="container-fluid">
            @if (TempData["Success"] != null) {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null) {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </div>
    </main>
    <footer class="footer">
        
            <p><strong>OS Facil © 2025</strong></p>
            <p>Advanced Business Development</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

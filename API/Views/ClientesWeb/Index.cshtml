@model Application.ViewModels.ClienteListViewModel

@{
    ViewData["Title"] = "Clientes";
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2><i class="bi bi-person"></i> Clientes (@Model.TotalCount)</h2>
        <a href="/ClientesWeb/Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Novo Cliente
        </a>
    </div>
</div>

<!-- Busca simples -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-md-6">
                <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Buscar por nome...">
            </div>
            <div class="col-md-2">
                <select class="form-select" name="pageSize">
                    <option value="10" selected="@(Model.PageSize == 10)">10 por página</option>
                    <option value="20" selected="@(Model.PageSize == 20)">20 por página</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Buscar</button>
            </div>
        </form>
    </div>
</div>

<!-- Tabela -->
@if (Model.Clientes.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model.Clientes)
                {
                    <tr>
                        <td>#@cliente.Id</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.CPF</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.Email</td>
                        <td>
                            <a href="/ClientesWeb/Details/@cliente.Id" class="btn btn-sm btn-primary">Ver</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginação simples -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm">Anterior</a>
                </li>
            }

            <li class="page-item active">
                <span class="page-link">Página @Model.PageNumber</span>
            </li>

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm">Próxima</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Nenhum cliente encontrado.
    </div>
}

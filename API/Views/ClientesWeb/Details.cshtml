@model Application.ViewModels.ClienteItemViewModel

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="page-title">
            <i class="bi bi-person-check"></i> Detalhes do Cliente
        </h1>
    </div>
    <div class="col-md-4 text-end">
        <a href="/ClientesWeb" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">@Model.Nome</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <h6 class="text-muted">ID</h6>
                        <p>#@Model.Id</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">CPF</h6>
                        <p>@Model.CPF</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <h6 class="text-muted">Telefone</h6>
                        <p>
                            @if (!string.IsNullOrEmpty(Model.Telefone))
                            {
                                <a href="tel:@Model.Telefone.Replace(" ", "").Replace("-", "").Replace("(", "").Replace(")", "")">
                                    @Model.Telefone
                                </a>
                            }
                            else
                            {
                                <span class="text-secondary">Não informado</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">Email</h6>
                        <p>
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            }
                            else
                            {
                                <span class="text-secondary">Não informado</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="mb-3">
                    <h6 class="text-muted">Endereço</h6>
                    <p>
                        @if (!string.IsNullOrEmpty(Model.Endereco))
                        {
                            @Model.Endereco
                        }
                        else
                        {
                            <span class="text-secondary">Não informado</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="/ClientesWeb/Edit/@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a href="/ClientesWeb" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="alert alert-info">
            <h5><i class="bi bi-info-circle"></i> Informações do Cliente</h5>
            <hr>
            <p><strong>ID:</strong> #@Model.Id</p>
            <p><strong>Nome:</strong> @Model.Nome</p>
            <p><strong>CPF:</strong> @Model.CPF</p>
            <hr>
            <p class="text-muted mb-0">Utilize este perfil para gerenciar os veículos e ordens de serviço associadas a este cliente.</p>
        </div>
    </div>
</div>

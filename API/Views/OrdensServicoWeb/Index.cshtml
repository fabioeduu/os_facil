@model OrdemServicoListViewModel

@{
    ViewData["Title"] = "Ordens de Serviço";
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2><i class="bi bi-clipboard-check"></i> Ordens de Serviço (@Model.TotalCount)</h2>
        <a href="/OrdensServicoWeb/Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nova OS
        </a>
    </div>
</div>

<!-- Busca simples -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-md-6">
                <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Buscar por status...">
            </div>
            <div class="col-md-2">
                <select class="form-select" name="pageSize">
                    <option value="10" selected="@(Model.PageSize == 10)">10 por página</option>
                    <option value="20" selected="@(Model.PageSize == 20)">20 por página</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Buscar</button>
            </div>
        </form>
    </div>
</div>

<!-- Tabela -->
@if (Model.OrdensServico != null && Model.OrdensServico.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Placa</th>
                    <th>Descrição</th>
                    <th>Status</th>
                    <th>Data Abertura</th>
                    <th>Valor</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ordem in Model.OrdensServico)
                {
                    <tr>
                        <td>#@ordem.Id</td>
                        <td>@ordem.PlacaVeiculo</td>
                        <td>@ordem.Descricao</td>
                        <td>
                            @{
                                var badgeClass = ordem.Status switch
                                {
                                    "Aberta" => "bg-info",
                                    "EmAndamento" => "bg-warning",
                                    "Aguardando" => "bg-secondary",
                                    "Concluida" => "bg-success",
                                    "Cancelada" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@ordem.Status</span>
                        </td>
                        <td>@ordem.DataAbertura.ToString("dd/MM/yyyy")</td>
                        <td>R$ @ordem.ValorTotal.ToString("F2")</td>
                        <td>
                            <a href="/OrdensServicoWeb/Details/@ordem.Id" class="btn btn-sm btn-primary">Ver</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginação simples -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm">Anterior</a>
                </li>
            }

            <li class="page-item active">
                <span class="page-link">Página @Model.PageNumber</span>
            </li>

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm">Próxima</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Nenhuma OS encontrada.
    </div>
}
